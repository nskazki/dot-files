{
  "title": "iterm2",
  "rules": [{
    "description": "iterm2: CMD+a -> ctrl+a",
    "manipulators": [{
      "type": "basic",
      "from": {
        "key_code": "a",
        "modifiers": {
          "mandatory": ["left_command"],
          "optional": ["any"]
        }
      },
      "conditions": [{
        "type": "frontmost_application_if",
        "bundle_identifiers": ["^com\\.googlecode\\.iterm2$"]
      }],
      "to": [
        {
          "key_code": "a",
          "modifiers": ["left_control"]
        }
      ]
    }]
  }, {
