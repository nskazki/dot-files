{
  "title": "osx",
  "rules": [{
    "description": "osx: CMD+h -> CMD+shift+h",
    "manipulators": [{
      "type": "basic",
      "from": {
        "modifiers": {
          "mandatory": ["left_command"],
          "optional": ["any"]
        },
        "key_code": "h"
      },
      "to": [{
        "key_code": "h",
        "modifiers": [
          "left_command",
          "left_shift"
        ]
      }]
    }]
  }, {
    "description": "osx: CMD+m -> CMD+shift+m",
    "manipulators": [{
      "type": "basic",
      "from": {
        "modifiers": {
          "mandatory": ["left_command"],
          "optional": ["any"]
        },
        "key_code": "m"
      },
      "to": [{
        "key_code": "m",
        "modifiers": [
          "left_command",
          "left_shift"
        ]
      }]
    }]
  }, {
    "description": "osx: long CMD+q",
    "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "q",
          "modifiers": {
            "mandatory": ["left_command"],
            "optional": ["any"]
          }
        },
        "conditions": [{
          "type": "frontmost_application_unless",
          "bundle_identifiers": ["^com\\.google\\.Chrome$"]
        }],
        "to_if_held_down": [{
          "key_code": "q",
          "modifiers": ["left_command"],
          "repeat": false
        }]
      }
    ]
  }, {
    "description": "osx: long ctrl+1",
    "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "1",
          "modifiers": {
            "mandatory": ["left_control"],
            "optional": ["any"]
          }
        },
        "to_if_held_down": [{
          "key_code": "1",
          "modifiers": ["left_control"],
          "repeat": false
        }]
      }
    ]
  }, {
    "description": "osx: long ctrl+2",
    "manipulators": [
      {
        "type": "basic",
        "from": {
          "key_code": "2",
          "modifiers": {
            "mandatory": ["left_control"],
            "optional": ["any"]
          }
        },
        "to_if_held_down": [{
          "key_code": "2",
          "modifiers": ["left_control"],
          "repeat": false
        }]
      }
    ]
  }, {
    "description": "osx: double CMD+q -> CMD+q",
    "manipulators": [{
      "type": "basic",
      "conditions": [{
        "type": "variable_if",
        "name": "double_cmd_q",
        "value": 1
      }, {
        "type": "frontmost_application_unless",
        "bundle_identifiers": ["^com\\.google\\.Chrome$"]
      }],
      "from": {
        "key_code": "q",
        "modifiers": {
          "mandatory": ["left_command"],
          "optional": ["any"]
        }
      },
      "to": [{
        "key_code": "q",
        "modifiers": "left_command"
      }]
    }, {
      "type": "basic",
      "conditions": [{
        "type": "frontmost_application_unless",
        "bundle_identifiers": ["^com\\.google\\.Chrome$"]
      }],
      "from": {
        "key_code": "q",
        "modifiers": {
          "mandatory": ["left_command"],
          "optional": ["any"]
        }
      },
      "to": [{
        "set_variable": {
          "name": "double_cmd_q",
          "value": 1
        }
      }],
      "to_delayed_action": {
        "to_if_invoked": [{
          "set_variable": {
            "name": "double_cmd_q",
            "value": 0
          }
        }],
        "to_if_canceled": [{
          "set_variable": {
            "name": "double_cmd_q",
            "value": 0
          }
        }]
      }
    }]
  }, {
    "description": "osx: double ctrl+1 -> ctrl+1",
    "manipulators": [{
      "type": "basic",
      "conditions": [{
        "type": "variable_if",
        "name": "double_ctrl_1",
        "value": 1
      }],
      "from": {
        "key_code": "1",
        "modifiers": {
          "mandatory": ["left_control"],
          "optional": ["left_shift", "left_option"]
        }
      },
      "to": [{
        "key_code": "1",
        "modifiers": "left_control"
      }]
    }, {
      "type": "basic",
      "from": {
        "key_code": "1",
        "modifiers": {
          "mandatory": ["left_control"],
          "optional": ["left_shift", "left_option"]
        }
      },
      "to": [{
        "set_variable": {
          "name": "double_ctrl_1",
          "value": 1
        }
      }],
      "to_delayed_action": {
        "to_if_invoked": [{
          "set_variable": {
            "name": "double_ctrl_1",
            "value": 0
          }
        }],
        "to_if_canceled": [{
          "set_variable": {
            "name": "double_ctrl_1",
            "value": 0
          }
        }]
      }
    }]
  }, {
    "description": "osx: double ctrl+2 -> ctrl+2",
    "manipulators": [{
      "type": "basic",
      "conditions": [{
        "type": "variable_if",
        "name": "double_ctrl_2",
        "value": 1
      }],
      "from": {
        "key_code": "2",
        "modifiers": {
          "mandatory": ["left_control"],
          "optional": ["left_shift", "left_option"]
        }
      },
      "to": [{
        "key_code": "2",
        "modifiers": "left_control"
      }]
    }, {
      "type": "basic",
      "from": {
        "key_code": "2",
        "modifiers": {
          "mandatory": ["left_control"],
          "optional": ["left_shift", "left_option"]
        }
      },
      "to": [{
        "set_variable": {
          "name": "double_ctrl_2",
          "value": 1
        }
      }],
      "to_delayed_action": {
        "to_if_invoked": [{
          "set_variable": {
            "name": "double_ctrl_2",
            "value": 0
          }
        }],
        "to_if_canceled": [{
          "set_variable": {
            "name": "double_ctrl_2",
            "value": 0
          }
        }]
      }
    }]
  }]
} 
