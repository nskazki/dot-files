{
    "autoclose": true,
    "autoindent": true,
    "backup": true,
    "basename": false,
    "colorcolumn": 0,
    "colorscheme": "twilight",
    "comment": true,
    "cursorline": true,
    "encoding": "utf-8",
    "eofnewline": true,
    "fastdirty": true,
    "fileformat": "unix",
    "filetype": "unknown",
    "ftoptions": true,
    "ignorecase": false,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": true,
    "keymenu": false,
    "linter": true,
    "literate": true,
    "matchbrace": true,
    "mkparents": false,
    "mouse": true,
    "paste": false,
    "readonly": false,
    "rmtrailingws": true,
    "ruler": true,
    "savecursor": false,
    "savehistory": true,
    "saveundo": false,
    "scrollbar": true,
    "scrollmargin": 3,
    "scrollspeed": 1,
    "smartpaste": true,
    "softwrap": false,
    "splitbottom": true,
    "splitright": true,
    "status": true,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) | ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "",
    "statusline": true,
    "sucmd": "sudo",
    "syntax": true,
    "tabmovement": false,
    "tabsize": 2,
    "tabstospaces": true,
    "useprimary": true
}
