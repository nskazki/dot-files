{
    "diffEditor.ignoreTrimWhitespace": false,
    "telemetry.enableTelemetry": false,
    "window.title": "${activeEditorMedium}",
    "window.enableMenuBarMnemonics": false, // It conflicts with alt+V
    "breadcrumbs.enabled": false,
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.editor.showIcons": false,
    "workbench.editor.untitled.hint": "hidden", // some hint I don't need
    "workbench.activityBar.visible": false, // I don't like blinking counters
    "explorer.compactFolders": false, // I don't like squashed folders
    "explorer.openEditors.visible": 0, // tabs are enough for me to know which files are opened
    "editor.tabSize": 2,
    "editor.fontSize": 18,
    "editor.lineHeight": 22,
    "editor.fontFamily": "Monospace, 'monospace', monospace",
    "editor.matchBrackets": "never", // default highlighting for brackets is way too bright - replaced with https://marketplace.visualstudio.com/items?itemName=rafamel.subtle-brackets
    "editor.hover.enabled": false, // I don't need definitions blinking as I move the cursor
    "editor.parameterHints.enabled": false, // I don't need parameters blinking as I type
    "editor.minimap.enabled": false, // I value the screen space
    "editor.occurrencesHighlight": false, // that stange feature highlighting whatever you select
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.hideCursorInOverviewRuler": true, // I don't need to know the cursor position when I look at the scroolbar
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.simpleDialog.enable": true,
    "files.associations": {
        // I don't want to be bothered about comments in JSON
        "*.json": "jsonc"
    },
    "typescript.suggestionActions.enabled": false, // it would suggest converting CommonJS imports to ES6 ones
    "javascript.suggestionActions.enabled": false,
    "typescript.validate.enable": false, // I don't need red underlines appearing and disapearing as I type
    "javascript.validate.enable": false,
    "editor.lightbulb.enabled": false, // I don't need any of these irritating hints
    "editor.snippetSuggestions": "none", // I don't like snippets
    "editor.suggest.showSnippets": false,
    "search.mode": "reuseEditor", // sublime-like
    "typescript.suggest.includeCompletionsWithSnippetText": false,
    "highlightwords.box": false, // the default color is too bright, do: ~/.vscode/extensions/rsbondi.highlight-words-0.1.4/out/src/config.js -> dark.color = '#2d2a2e';
    "highlightwords.colors": [
        { "light": "#b3d9ff", "dark": "#ffd866" },
        { "light": "#e6ffb3", "dark": "#78dce8" },
        { "light": "#d1e0e0", "dark": "#ff6188" },
        { "light": "#b3b3ff", "dark": "#a9dc76" },
        { "light": "#ffd9b3", "dark": "#ab9df2" },
        { "light": "#ffb3ff", "dark": "#ffffff" },
        { "light": "#b3ffb3", "dark": "#ff8a65" },
        { "light": "#ffff80", "dark": "#9e9e9e" }
    ],
    "subtleBrackets.disableNative": false, // it doesn't do it right
    "scm.diffDecorationsGutterWidth": 2, // the default one it too thick
    "workbench.colorCustomizations": {
        // I don't need that explosion of random colors under my scrollbar
        // https://stackoverflow.com/a/51684408/16062729
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",
        "editorOverviewRuler.errorForeground": "#0000",
        "editorOverviewRuler.warningForeground": "#0000",
        "editorOverviewRuler.infoForeground": "#0000",

        "errorLens.errorBackground": "#0000",
        "errorLens.errorMessageBackground": "#e454541b",
        "errorLens.warningBackground": "#0000",
        "errorLens.warningMessageBackground": "#ff942f1b",
        "errorLens.infoBackground": "#0000",
        "errorLens.infoMessageBackground": "#00b7e420",
        "errorLens.hintBackground": "#0000",
        "errorLens.hintMessageBackground": "#17a2a220",
    },
    "vetur.ignoreProjectWarning": true, // https://vuejs.github.io/vetur/guide/FAQ.html#vetur-can-t-find-tsconfig-json-jsconfig-json-in-xxxx-xxxxxx
    "vetur.validation.style": false, // I don't know what it would do
    "vetur.validation.script": false, // I'm okay with ESLint
    "vetur.validation.template": false, // I'm okay with ESLint
    "eslint.run": "onSave",
    "errorLens.margin": "1ch",
    "togglequotes.chars": ["`", "'"],
}
